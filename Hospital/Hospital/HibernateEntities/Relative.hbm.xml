<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
	namespace="DAOLayer" assembly="DAOLayer">
	<class name="Relative" table="Relative">
		<id name="ID_Relative" column="ID_Relative">
			<generator class="native"/>
		</id>
		<property name="Lastname" column="Lastname"  />
		<property name="Firstname" column="Firstname"  />
		<property name="DOB" column="DOB"  />
		<property name="KindOfRelationship" column="KindOfRelationship"  />
		<many-to-one name = "Patient" class="Patient" column = "ID_Patient" lazy="false" cascade = "save-update"/>
		<many-to-one name = "Gender" class="Gender" column = "ID_Gender" lazy="false" cascade = "save-update"/>
	</class>
</hibernate-mapping>